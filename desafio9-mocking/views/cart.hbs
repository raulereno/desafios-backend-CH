<div id="container_cart">
  <h1>Carrito</h1>
  {{#if productsInCart}}
  <button id="clean_cart">Limpiar Carrito</button>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">Producto</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
        <th scope="col">Stock</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each productsInCart}}
      <tr class="product{{this.product._id}}">
        <td><img width="60" src={{this.product.image}} alt=""></td>
        <td>{{this.product.title}}</td>
        <td>${{this.product.price}}</td>

        {{#if this.product.stock}}
        <td class="container_quantity">

          <button onclick="minusQuantity('{{this.product._id}}')" class="minus_button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path
                d="M416 256c0 17.7-14.3 32-32 32L32 288c-17.7 0-32-14.3-32-32s14.3-32 32-32l352 0c17.7 0 32 14.3 32 32z" />
            </svg>
          </button>
          <span class="quantity">{{this.quantity}}</span>
          <button onclick="plusQuantity('{{this.product._id}}', '{{this.product.stock}}')" class="plus_button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path
                d="M240 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H32c-17.7 0-32 14.3-32 32s14.3 32 32 32H176V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H384c17.7 0 32-14.3 32-32s-14.3-32-32-32H240V80z" />
            </svg>
          </button>


        </td>
        <td>{{this.product.stock}}</td>
        {{else}}
        <td>-</td>
        <td style="color: red;">Sin stock</td>
        {{/if}}

        <td>
          <button class="deleteProduct" onclick="deleteProductInCart('{{this.product._id}}')">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
              <path
                d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
            </svg>
          </button>
      </tr>
      {{/each}}
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="total_count">Total: ${{#totalCount productsInCart}}
          {{this}}
          {{/totalCount}}</td>
        <td>
          <button id="purchase_products">Finalizar compra</button>
        </td>
      </tr>
    </tbody>
  </table>
  {{else}}
  <h2>No hay productos en el carrito</h2>
  <a href="/">Volver al inicio</a>
  {{/if}}
</div>
<script src="/js/purchase.js"></script>